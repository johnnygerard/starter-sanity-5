{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "Preserve",
    "moduleDetection": "force",
    "paths": {
      "~/*": ["src/*"],
      "~root/*": ["*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["sanity.*.ts", "src"]
}
